{
  "type": "bubble",
  "size": "hecto",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "image",
            "url": "{{preview_url}}",
            "aspectMode": "fit",
            "aspectRatio": "2:3",
            "size": "full"
          }
        ],
        "paddingAll": "0px",
        "width": "100%",
        "height": "100%",
        "position": "relative",
        "justifyContent": "center",
        "alignItems": "center"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "text",
                "text": "アップロードが完了しました。",
                "color": "#000000",
                "size": "12px"
              }
            ],
            "offsetStart": "20px"
          },
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                  {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                      {
                        "type": "text",
                        "text": "・追加日:",
                        "color": "#000000",
                        "size": "13px"
                      }
                    ],
                    "position": "relative",
                    "flex": 0
                  },
                  {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                      {
                        "type": "text",
                        "text": "{{post_date}}",
                        "size": "13px"
                      }
                    ],
                    "position": "relative",
                    "flex": 0,
                    "margin": "sm"
                  }
                ],
                "flex": 0,
                "justifyContent": "flex-start",
                "alignItems": "flex-start"
              },
              {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                  {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                      {
                        "type": "text",
                        "text": "・削除日:",
                        "color": "#000000",
                        "size": "13px"
                      }
                    ],
                    "position": "relative",
                    "flex": 0,
                    "justifyContent": "flex-start"
                  },
                  {
                    "type": "box",
                    "layout": "vertical",
                    "contents": [
                      {
                        "type": "text",
                        "text": "{{delete_date}}",
                        "size": "13px"
                      }
                    ],
                    "position": "relative",
                    "flex": 0,
                    "margin": "sm"
                  }
                ],
                "position": "relative",
                "justifyContent": "flex-start"
              }
            ],
            "offsetStart": "20px",
            "position": "relative",
            "flex": 0,
            "justifyContent": "flex-start",
            "alignItems": "flex-start"
          }
        ],
        "backgroundColor": "#f5deb3",
        "justifyContent": "flex-start",
        "paddingTop": "5px",
        "paddingBottom": "5px"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "text",
                "text": "オリジナル画像を見る",
                "color": "#FFFFFF"
              }
            ],
            "position": "relative",
            "backgroundColor": "#008080",
            "cornerRadius": "10px",
            "height": "40px",
            "justifyContent": "center",
            "alignItems": "center",
            "action": {
              "type": "uri",
              "uri": "{{original_url}}"
            }
          },
          {
            "type": "box",
            "layout": "vertical",
            "contents": [
              {
                "type": "text",
                "text": "サイズ圧縮画像を見る",
                "color": "#FFFFFF"
              }
            ],
            "position": "relative",
            "backgroundColor": "#008080",
            "cornerRadius": "10px",
            "height": "40px",
            "justifyContent": "center",
            "alignItems": "center",
            "margin": "sm",
            "action": {
              "type": "uri",
              "uri": "{{resized_url}}"
            }
          }
        ],
        "paddingAll": "10px",
        "backgroundColor": "#fffff0"
      }
    ],
    "paddingAll": "0px",
    "width": "100%",
    "position": "relative",
    "flex": 0
  }
}
