{
  "type": "bubble",
  "size": "hecto",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "image",
        "url": "{{preview_url}}",
        "aspectMode": "fit",
        "size": "full"
      },
      {
        "type": "box",
        "layout": "vertical",
        "paddingTop": "5px",
        "paddingBottom": "5px",
        "backgroundColor": "#f5deb3",
        "contents": [
          {
            "type": "text",
            "text": "画像が保存されました。",
            "color": "#000000",
            "size": "12px",
            "offsetStart": "20px"
          },
          {
            "type": "text",
            "text": "投稿日時：{{post_date}}",
            "color": "#000000",
            "size": "12px",
            "offsetStart": "20px",
            "margin": "xs"
          },
          {
            "type": "text",
            "text": "保存期間：{{delete_date}}まで",
            "color": "#000000",
            "size": "12px",
            "offsetStart": "20px",
            "margin": "xs"
          }
        ]
      },
      {
        "type": "box",
        "layout": "vertical",
        "backgroundColor": "#fffff0",
        "paddingAll": "10px",
        "contents": [
          {
            "type": "button",
            "style": "primary",
            "color": "#008080",
            "action": {
              "type": "uri",
              "label": "オリジナル画像を見る",
              "uri": "{{original_url}}"
            },
            "height": "sm"
          },
          {
            "type": "button",
            "style": "primary",
            "color": "#008080",
            "margin": "sm",
            "action": {
              "type": "uri",
              "label": "サイズ圧縮画像を見る",
              "uri": "{{resized_url}}"
            },
            "height": "sm"
          }
        ]
      }
    ]
  }
}
