{
  "type": "bubble",
  "size": "giga",
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      { "type": "image", "url": "{{preview_url}}", "aspectMode": "fit", "size": "full" },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          { "type": "text", "text": "{{title}}", "weight": "bold", "size": "md" },
          { "type": "text", "text": "{{tags}}", "size": "xs", "color": "#aaaaaa", "wrap": true },
          { "type": "text", "text": "{{body_text}}", "wrap": true, "size": "sm", "margin": "md" },
          { "type": "text", "text": "投稿：{{post_date}}", "size": "xs", "color": "#888888" },
          { "type": "text", "text": "保存期限：{{delete_date}}", "size": "xs", "color": "#888888" }
        ]
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "button",
            "action": {
              "type": "uri",
              "label": "画像を開く",
              "uri": "{{original_url}}"
            },
            "style": "primary",
            "color": "#008080",
            "height": "sm"
          }
        ]
      }
    ]
  }
}
